generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  itemCode    String          @id @unique
  itemType    String
  boxNumber   String
  spaceNumber String
  examType    String
  status      String
  createdAt   DateTime        @default(now())
  statusLogs  ItemStatusLog[]
}

model ItemStatusLog {
  id          Int      @id @default(autoincrement())
  itemCode    String
  UserCreated String
  observation String
  status      String
  createdAt   DateTime @default(now())
  item        Item     @relation(fields: [itemCode], references: [itemCode])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(255) // Limitando o tamanho do email
  password  String   @db.VarChar(255) // Tamanho m√°ximo para senhas
  createdAt DateTime @default(now())
  role      String   @default("user")
  name      String?  @db.VarChar(255) // Campo opcional para o nome
}




generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  itemCode    String          @id @unique
  itemType    String
  boxNumber   String
  spaceNumber String
  examType    String
  status      String
  createdAt   DateTime        @default(now())
  statusLogs  ItemStatusLog[]
}

model ItemStatusLog {
  id          Int      @id @default(autoincrement())
  itemCode    String
  UserCreated String
  observation String
  status      String
  createdAt   DateTime @default(now())
  item        Item     @relation(fields: [itemCode], references: [itemCode])
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  createdAt DateTime @default(now())
}